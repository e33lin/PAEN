<%= form_with(model: manager, local: true) do |form| %>
  <% if manager.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(manager.errors.count, "error") %> prohibited this manager from being saved:</h2>

      <ul>
        <% manager.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 
    
<div class="row-container">     
  <%= form.radio_button :flag, "User", :style => "display: none;" %>
  <%= form.label :flag_user, "User", :class => 'label' %> 
  <%= form.radio_button :flag, "Manager", :checked => true %>
  <%= form.label :flag_manager, "Manager", :class => 'label' %>   
</div> 
<!-- 
  - Source (https://stackoverflow.com/questions/50453091/override-a-default-value-in-a-rails-form) used for understanding how to set input values if default values not provided
-->

<div class="field">
    <%= form.text_field :watiam, value: (form.object.watiam || params[:watiam]), placeholder: "Watiam" %>
  </div>
<div class="field">
    <%= form.text_field :first_name, value: (form.object.first_name || params[:first_name]), placeholder: "First Name" %>
  </div>
<div class="field">
    <%= form.text_field :last_name, value: (form.object.last_name || params[:last_name]), placeholder: "Last Name" %>
  </div>

 <div class="field">
    <%= form.password_field :password, value: (form.object.password || params[:password]), placeholder: "Password" %>
  </div>

  <div class="field">
    <%= form.password_field :password_confirmation, value: (form.object.password_confirmation || params[:password_confirmation]), placeholder: "Password Confirmation" %>
  </div>

<div class="actions">
    <%= form.submit "Create Account", style: 'width: 180px' %>
  </div>
  
<% end %>