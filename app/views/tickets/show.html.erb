<p>
  <strong>Creator:</strong>
  <% if @ticket.creator_id == current_user.id%>
    <%= @ticket.creator_id %>
  <% else %>
       Anonymous
  <% end %>
</p>

<p>
  <strong>Priority:</strong>
  <%= @ticket.priority %>
</p>

<p>
  <strong>Type:</strong>
  <%= @ticket.type %>
</p>

<p>
  <strong>Category:</strong>
  <%= @ticket.category %>
</p>

<p>
  <strong>Users:</strong>
    <% if @ticket.creator_id == current_user.id%>
      <% @ticket.users.each do |user| %>
        <ul>
          <li><%= "#{user.watiam}: #{user.first_name} #{user.last_name}" %></li>
        </ul>
      <% end %>
    <% else %>
       Anonymous
    <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @ticket.description %>
</p>

<p>
  <strong>Date:</strong>
  <%= @ticket.date %>
</p>

<% if @ticket.creator_id == current_user.id%>
<%= link_to 'Edit', edit_ticket_path(@ticket) %> |
<% end %>
<%= link_to 'Back', user_tickets_path %>

